{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "out",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["/opt/lib/*", "src/lib/*"]
    }
  },
  "ts-node": { "esm": true },
  "exclude": ["node_modules", "**/*.test.ts"]
}
