{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "out",
    "baseUrl": "./",
    "paths": {
      "lib/*": ["src/lib/*"],
      "@types/*": ["src/types/*"],
      "@exampleService/*": ["src/services/exampleService/*"],
    }
  },

  "exclude": ["node_modules", "**/*.test.ts"]
}
