{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "out",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*", "/opt/lib/*"],
      "@types/*": ["src/types/*"],
      "@exampleService/*": ["src/services/exampleService/*"],
    }
  },
  "ts-node": { "esm": true },
  "exclude": ["node_modules", "**/*.test.ts"]
}
