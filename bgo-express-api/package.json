  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "dotenv": "^16.4.7",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.0",
    "node-pg-migrate": "^7.8.0",
